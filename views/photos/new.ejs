<%- include("../partials/header") %>


<div class="container">
  <div class="row">
    <div class="text-center col-lg-12">
      <h1 class="">Post a New Photo</h1>
    </div>
    <div class="col-lg-12">
      <div style="max-width: 400px" class="mb-3 mt-3 ml-auto mr-auto">
        <form class="" action="/photos" method="post">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Name">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="image" placeholder="Image URL">
          </div>
          <div class="form-group">
            <textarea class="form-control" type="text" name="description" rows="5" placeholder="Photo Description"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </form>
        <a class="btn btn-sm btn-light" href="/photos">Go Back</a>
      </div>
    </div>
  </div>
</div>


<%- include("../partials/footer") %>
