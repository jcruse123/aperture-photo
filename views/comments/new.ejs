<%- include("../partials/header") %>
<script type="text/javascript" src="/js/stars.js"></script>


<div class="container">
  <div class="row">
    <div class="text-center col-lg-12">
      <h1>Add New Rating to <%= photo.name %></h1>
    </div>
    <div class="w-50 mb-3 mt-3 ml-auto mr-auto">
      <form class="" action="/photos/<%= photo._id %>/comments" method="POST">
        <div class="form-group">
          <textarea class="form-control" type="text" name="comment[text]" placeholder="Write a comment here." rows="5"></textarea>
        </div>
        <div class="stars mb-4 text-center" data-rating="3">
          <span class="star">&nbsp;</span>
          <span class="star">&nbsp;</span>
          <span class="star">&nbsp;</span>
          <span class="star">&nbsp;</span>
          <span class="star">&nbsp;</span>
        </div>
        <input type="hidden" id="star-rating" name="comment[rating]" value="">
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a class="btn btn-sm btn-light" href="/photos/<%= photo._id %>">Go Back</a>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
