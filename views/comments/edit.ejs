<%- include("../partials/header") %>


<div class="container">
  <div class="row">
    <div class="text-center col-lg-12">
      <h1 class="text-light">Edit Comment</h1>
    </div>
    <div class="w-50 mb-3 mt-3 ml-auto mr-auto">
      <form class="" action="/photos/<%= photo_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a class="btn btn-sm btn-light" href="/photos/<%= photo_id %>">Go Back</a>
    </div>
  </div>
</div>


<%- include("../partials/footer") %>
