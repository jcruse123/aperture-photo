<%- include("../partials/header") %>

<div class="container">
  <div class="row">
    <div class="text-center col-lg-12">
      <h1>Edit <%= photo.name %></h1>
    </div>
    <div class="w-50 mb-3 mt-3 ml-auto mr-auto">
      <form class="" action="/photos/<%= photo._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="photo[name]" value="<%= photo.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="photo[image]" value="<%= photo.image %>">
        </div>
        <div class="form-group">
          <textarea class="form-control" type="text" name="photo[description]" rows="5"><%= photo.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a class="btn btn-sm btn-light" href="/photos/<%= photo._id %>">Go Back</a>
      <form class="mt-5 pt-5" action="/photos/<%= photo._id %>?_method=DELETE" method="post">
        <div class="form-group">
          <button class="btn btn-lg btn-danger btn-block">Delete Photo</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
