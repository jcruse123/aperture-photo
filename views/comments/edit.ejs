<%- include("../partials/header") %>
<script type="text/javascript" src="/js/stars.js"></script>


<div class="container">
  <div class="row">
    <div class="text-center col-lg-12">
      <h1>Edit Rating</h1>
    </div>
    <div class="col-lg-12">
      <div style="max-width: 400px" class="mb-3 mt-3 ml-auto mr-auto">
        <form class="" action="/photos/<%= photo_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <textarea class="form-control" type="text" name="comment[text]" value="" rows="5"><%= comment.text %></textarea>
          </div>
          <div class="mb-3 stars text-center" data-rating="<%= comment.rating %>">
            <span class="star"></span>
            <span class="star"></span>
            <span class="star"></span>
            <span class="star"></span>
            <span class="star"></span>
          </div>
          <input type="hidden" id="star-rating" name="comment[rating]" value="">
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
          </div>
        </form>
        <a class="btn btn-sm btn-light" href="/photos/<%= photo_id %>">Go Back</a>
      </div>
    </div>
  </div>
</div>


<%- include("../partials/footer") %>
